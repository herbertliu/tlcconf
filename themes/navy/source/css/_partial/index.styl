  .subject-main-title
    color: rgb(255, 255, 255)
    font-size: 32px
    font-weight: bold
    width: 312px
    padding: 60px 0px 30px
    border-bottom: 1px dashed rgb(255, 255, 255)
    margin: 0px auto 30px
  .subject-main-content 
    font-size: 16px
    color: rgb(255, 255, 255)
    width: 600px
    text-align: center
    line-height: 24px
    margin: 0px auto

.subject-branch 
  float: left
  width: 388px
  height: 264px
  background-color: rgb(255, 255, 255)
  margin-right: 16px
  margin-bottom: 128px    
  .subject-branch-title
    color: rgb(53, 119, 255)
    font-size: 24px
    font-weight: bold
    padding-top: 46px
    padding-bottom: 28px
    border-bottom: 1px dashed rgb(221, 221, 221)
    margin: 0px 32px 20px
  .subject-branch-content 
    text-align: left
    line-height: 24px
    font-size: 16px
    margin: 0px 32px

.no-margin
  margin-right: 0px

#intro-user-wrap 
  text-align: center
  padding-top: 74px
  padding-bottom: 70px
  margin: 0px auto
  .intro-user-title 
    width: 543px
    height: 67px
    background: url(https://qpic.url.cn/feeds_pic/Q3auHgzwzM5aDoH6vbhicFbrxibcaWzAmsYAlqvJ32g4KqxiaBtibwRZYg/) no-repeat
    margin: 0px auto 16px
  .intro-user-item
    display: inline-block
    width: 240px
    margin: 20px
    img 
      width: 160px
      height: 160px
      border-radius: 50%
    .name  
      color: rgb(51, 121, 255)
      font-size: 22px
      font-weight: bold
      margin: 14px 0px
    .desc
      font-size: 18px
      color: rgb(51, 51, 51)

.view-all 
  color: rgb(57, 115, 255)
  font-size: 18px
  width: 160px
  height: 60px
  text-align: center
  line-height: 60px
  border-width: 1px
  border-style: solid
  border-color: rgb(57, 122, 255)
  border-image: initial
  margin: 40px auto 0px
  border-radius: 4px

#partner-wrap 
  text-align: center
  padding-top: 74px
  padding-bottom: 100px
  margin: 0px auto
  .partner-title 
    width: 543px
    height: 67px
    background: url(https://qpic.url.cn/feeds_pic/Q3auHgzwzM5tbceibLErxRBLriaw2LYcvRqPyFYRNMEhL8ia2xBib2nTUA/) no-repeat
    margin: 0px auto 36px
  .partner-item 
    float: left
    padding: 5px
  ul:after
    clear: both
    content: ''
    display: table  
